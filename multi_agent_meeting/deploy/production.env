# 多智能体会议系统生产环境配置
# 请根据您的实际环境修改以下配置

# Flask配置
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=False
FLASK_SECRET_KEY=your-super-secret-key-here-change-this

# API配置
API_BASE_URL=https://api.deepseek.com/v1
API_MODEL_TYPE=deepseek-chat
API_TEMPERATURE=0.7
API_MAX_TOKENS=4096
API_TIMEOUT=30

# 会议配置
MEETING_MAX_ROUNDS=13
MEETING_TIMER_SECONDS=5
MEETING_MAX_HISTORY=20
MEETING_AUTO_SAVE_INTERVAL=300
MEETING_AGENT_COUNT=4
MEETING_CEO_AGENT_ID=0

# 日志配置
LOG_LEVEL=INFO
LOG_ENABLE_CONSOLE=True
LOG_ENABLE_FILE=True

# WebSocket配置
WEBSOCKET_CORS_ORIGINS=*
WEBSOCKET_ASYNC_MODE=threading
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=25

# 生产环境特定配置
# 建议在生产环境中设置更严格的CORS策略
# WEBSOCKET_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 日志级别建议在生产环境中设置为WARNING或ERROR
# LOG_LEVEL=WARNING
